#class gps_actions open;

#alias gps.clear gps.run;
#alias {gps.force_clear} {
    clear %0;
    on_cleared {
        gps.run;
    };
};

#alias {gps.delay} {
    #var gps_delay 1.5;
    #var gps_delay %1;
    #delay {gps_delay} {
        gps.run;
    } {${gps_delay}};
};

#alias {gps.guohe} {
    #class gps.action.inner open;
    #action {接过你递给的船资} {
        gps.watchdog.stop;
    };
    #ticker {yell_boat} {
        yell boat;
    } {3};
    #action {正等着你呢，上来吧。} {
        enter;
    };
    #action {艄公将一块踏脚板搭上堤岸，} {
        enter;
    };
    #alias {shangchuan} {
        #unticker {yell_boat};
        #class gps.action.inner open;
        #action {所有人被赶下了渡船} {
            #class gps.action.inner kill;
            gps.run;
        };
        #action {艄公说“到啦，上岸吧”，随即把一块踏脚板搭上堤岸。} {
            #class gps.action.inner kill;
            out;
            gps.run;
        };
        #class gps.action.inner close;
    };
    #action {^江心驶去} {
        shangchuan;
    };
    #class gps.action.inner close;

    ask shao gong about huanghe;
    ask shao gong about jiang;
    yell boat;
};

