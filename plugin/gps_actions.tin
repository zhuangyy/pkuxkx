#alias {gps.muchang} {
    #var next_action %1;
    #class gps.action.inner open;
    #action {青海湖畔美不胜收，你不由停下脚步，欣赏起了风景。} {
        #delay {again} {
            ${next_action};
        } {1};
        #delay {gps_delay} {
            #class gps.action.inner kill;
            gps.run;
        } {2};
    } {1};
    #delay {gps_delay} {
        #class gps.action.inner kill;
        gps.run;
    } {1};
    #class gps.action.inner close;

    ${next_action};
};

#alias {gps.qu_sibao} {
    #class gps.action.inner open;
    #action {^%d%s《{广陵散|率意帖|溪山行旅图|呕血谱}》$} {
        #if {@ismember{%%3;sibao_zh} == 0} {
            #list sibao_zh add {%%3};
            #list sibao add {%%1};
        };
    };
    #act {^柜子里目前存放的物品有：$} {
        #var sibao {};
        #var sibao_zh {};
        #delay {1} {
            #class gps.action.inner kill;
            #if {@numitems{sibao}==4} {
                #loop 4 1 i {getout @item{sibao;$i}};
                #system {touch /tmp/pkuxkx_sibao_${char_id}${dot}lock};
                #delay 1 {
                    gps.run;
                };
            };
            #else {
                #show 你的柜子里四宝不齐或有多余，无法自动前往梅庄。;
            };
        };
    };
    #class gps.action.inner close;
    store ouxue pu;
    store xishan tu;
    store shuaiyi tie;
    store guangling san;

    find;
};

